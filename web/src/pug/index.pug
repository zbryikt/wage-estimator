    script: :lsc
      handler = {}
      cfg = do
        "monthly-salary": 51695
        "minimal-work": 2
        "expense-rate": 0.25
      cfg["hourly-salary-20"] = Math.round(cfg["monthly-salary"] / 20 / 8)
      cfg["hourly-salary-30"] = Math.round(cfg["monthly-salary"] / 30 / 8)
      cfg["monthly-expense"] = Math.round(cfg["monthly-salary"] * (1 + cfg["expense-rate"]))
      cfg["minimal-cost"] = cfg["minimal-work"] * 8 * cfg["hourly-salary-30"]
      cfg["one-month-fee"] = Math.round(cfg["monthly-salary"] * ( 1 + 0.01 / 0.5 ) * 1.25 * 1.25 * 1.1 * 1.15)
      for k,v of cfg =>
        _ = (k, v) -> handler[k] = ({node}) -> node.innerText = cfg[k]
        _(k,v)
      view = new ldView do
        root: document.body
        handler: handler

